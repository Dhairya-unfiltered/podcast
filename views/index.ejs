<!DOCTYPE html>
<html>
<head>
  <title>Podcast App</title>
  <style>
    body {
      font-family: system-ui, sans-serif;
      background: #f9f9f9;
      margin: 0;
      padding: 20px;
      color: #333;
    }

    h1, h2 {
      color: #222;
    }

    input[type="text"], input[type="file"] {
      padding: 8px;
      margin: 5px 0;
      border: 1px solid #ccc;
      border-radius: 6px;
      width: 100%;
      max-width: 300px;
      box-sizing: border-box;
    }

    button {
      padding: 8px 16px;
      border: none;
      border-radius: 6px;
      background-color: #444;
      color: white;
      cursor: pointer;
      margin-top: 8px;
    }

    button:hover {
      background-color: #222;
    }

    .podcast-item {
      background: white;
      border-radius: 8px;
      padding: 16px;
      margin: 10px 0;
      box-shadow: 0 2px 6px rgba(0,0,0,0.05);
      display: flex;
      align-items: center;
      gap: 12px;
      cursor: pointer;
      transition: transform 0.2s ease;
    }

    .podcast-item:hover {
      transform: scale(1.01);
    }

    .audio-icon {
      font-size: 28px;
      color: #0077cc;
    }

    .podcast-info {
      flex: 1;
    }

    .podcast-name {
      font-weight: bold;
      font-size: 16px;
    }

    .username {
      color: #666;
      font-size: 14px;
    }

    #overlay {
      display: none;
      position: fixed;
      top: 0; left: 0;
      width: 100%; height: 100%;
      background: rgba(0,0,0,0.5);
      z-index: 100;
    }

    #modal {
      display: none;
      position: fixed;
      top: 50%; left: 50%;
      transform: translate(-50%, -50%);
      background: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.3);
      z-index: 101;
      width: 90%;
      max-width: 400px;
      text-align: center;
    }

    audio {
      width: 100%;
      margin-top: 10px;
    }

    .no-results {
      text-align: center;
      color: #999;
      margin-top: 20px;
    }
  </style>
</head>
<body>

  <% if (isLoggedIn) { %>
    <h1>Upload Podcast</h1>
    <form action="/upload" method="POST" enctype="multipart/form-data">
      <input type="text" name="name" placeholder="Podcast name" required><br>
      <input type="file" name="podcast" accept="audio/*" required><br>
      <button type="submit">Upload</button>
    </form>
    <form action="/logout" method="POST">
      <button type="submit">Logout</button>
    </form>
  <% } else { %>
    <h2><a href="/login">Login</a> or <a href="/signup">Signup</a> to upload</h2>
  <% } %>

  <hr>
  <form method="GET" action="/search">
    <input type="text" name="q" placeholder="Search podcasts..." />
    <button type="submit">Search</button>
  </form>
  <hr>

  <h2>All Podcasts</h2>

  <% if (podcasts.length === 0) { %>
    <div class="no-results">No podcasts found ðŸŽ§</div>
  <% } else { %>
    <% podcasts.forEach(p => { %>
      <div class="podcast-item" data-name="<%= p.name %>" data-url="<%= p.url %>">
        <div class="audio-icon">ðŸ”Š</div>
        <div class="podcast-info">
          <div class="podcast-name"><%= p.name %></div>
          <div class="username">by <%= p.userId?.username || 'Unknown' %></div>
        </div>
      </div>
    <% }) %>
  <% } %>

  <!-- Modal and overlay -->
  <div id="overlay"></div>
  <div id="modal">
    <h3 id="modal-title"></h3>
    <audio id="modal-audio" controls></audio><br><br>
    <button onclick="closeModal()">Close</button>
  </div>

  <script>
    const items = document.querySelectorAll('.podcast-item');
    const modal = document.getElementById('modal');
    const overlay = document.getElementById('overlay');
    const title = document.getElementById('modal-title');
    const audio = document.getElementById('modal-audio');

    items.forEach(item => {
      item.addEventListener('click', () => {
        title.textContent = item.getAttribute('data-name');
        audio.src = item.getAttribute('data-url');
        modal.style.display = 'block';
        overlay.style.display = 'block';
      });
    });

    function closeModal() {
      modal.style.display = 'none';
      overlay.style.display = 'none';
      audio.pause();
    }
  </script>
</body>
</html>
